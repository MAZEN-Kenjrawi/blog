<div class="col-sm-10">
    {{ form_start(form, {'attr': {'class': form_class}}) }}
    {{ form_errors(form) }}
    {{ form_widget(form) }}

    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button class="btn btn-info" type="submit">{{ button_label|default('Save') }}</button>
            <a class="btn btn-dark" href="">Cancel</a>
        </div>
    </div>
    {{ form_end(form) }}
</div>

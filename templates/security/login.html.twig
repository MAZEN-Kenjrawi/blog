{% extends 'front.html.twig' %}

{% block title %}
    Moutaz Blog - Login!
{% endblock %}

{% block body %}
    <div class="container login-container">
        <div class="row h-100 justify-content-center">
            <div class="col-lg-6 my-auto">
                <div class="card bg-light">
                    <div class="card-header">Please sign in</div>
                    <div class="card-body">
                        <h4 class="card-title">Mouataz Blog - Login</h4>
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <form method="post">
                            <div class="form-group">
                                <label class="sr-only" for="inputUsername">Username</label>
                                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Username" required="required" autofocus />
                            </div>

                            <div class="form-group">
                                <label class="sr-only" for="inputPassword">Password</label>
                                <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Password" required="required" />
                            </div>
                            

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

                            {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html
                            #}

                            <div class="checkbox mb-3">
                                <label>
                                    <input name="_remember_me" type="checkbox">
                                    Remember me
                                </label>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-info d-block w-100" type="submit">
                                    Sign in
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
